{
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/*.js.map": true,
        "**/*.js": {"when": "$(basename).ts"},
        "**/*.css": {"when": "$(basename).scss"},
        "node_modules": true
    },
    "editor.renderWhitespace": "all",
    "editor.minimap.enabled": false,
    "files.trimTrailingWhitespace": true
}
